<h1>Update Song: <%= @song.name %></h1>
<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label for="name">Name</label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>">

  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" id="artist_name" value="<%= @song.artist.name %>">


  <% Genre.all.each do |genre| %>
  <label><%= genre.name %></label>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %>
  <% end %>

  <input type="submit" value="Save">
</form>
